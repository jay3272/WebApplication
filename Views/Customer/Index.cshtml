@model IEnumerable<WebApplication.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_index.cshtml";
}

<h2>Index</h2>

<p><a href="/Customer/Create">新增客戶</a></p>

<!-- Custom styles for this page -->
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />

<div class="card shadow mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        客戶查詢表
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="display nowrap dataTable" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            客戶ID
                        </th>
                        <th>
                            公司名稱
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CompanyName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.CustomerID })
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = item.CustomerID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>



        </div>
    </div>
</div>


<!-- Page level plugins -->
<script src="~/Content/jquery-3.7.0.js"></script>
<script src="~/Content/jquery.dataTables.min.js"></script>


<script>

    $(document).ready(function () {
        $('#dataTable').dataTable({
            pagingType: 'full_numbers',
            order: [[0, 'asc']],
        });
    });

</script>
